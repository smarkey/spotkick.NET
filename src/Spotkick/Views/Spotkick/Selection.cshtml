@model SelectionViewModel

@{
    ViewData["Title"] = "Playlist Setup";
}

<h1>Playlist Settings</h1>

<div class="row">
    <div class="col-md-12">
        <h2>Artists coming to @Model.Location.City</h2>
        <p>Here is a list of your <strong>Followed Artists</strong> who are coming to <strong>@Model.Location.City</strong>.</p>
        <form method="get" asp-controller="Spotkick" asp-action="Playlist">
            <input hidden name="userId" value="@Model.User.Id"/>
            <label>
                Select Artists that you would like to feature on your playlist
                <select name="artistIds" class="custom-select custom-select-lg mb-3" multiple>
                    @foreach (var artist in Model.Artists)
                    {
                        <option selected value="@artist.Id">@artist.Name</option>
                    }
                </select>
            </label>
            <br/>
            <label>
                Specify the number of tracks per Artist
                <input type="range" min="1" max="10" value="1" name="numberOfTracks"/>
            </label>
            <br/>
            <input type="submit" name="generatePlaylist" value="Create Playlist" class="btn btn-info"/>
        </form>
    </div>
</div>